<div class="row" style="border-block-color:red">
    <div class="col-md-4">
        <form asp-action="CreateBiodata" asp-controller="Biodata" method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaffId" class="control-label"></label>
                <input asp-for="StaffId" class="form-control" />
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" class="form-control" data-val-maxlength-max="10"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="DOB" class="control-label"></label>
                        <input id="DOB" name="DOB" class="form-control" asp-for="DOB" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>


            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="LocationId" class="control-label"></label>
                        <textarea asp-for="LocationId" class="form-control"></textarea>
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input name="Location" class="form-control" asp-for="Location" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Referer" class="control-label"></label>
                <select name="RefererId" id="refererId" asp-for="Referer" class="form-control">
              
                </select>
                <span asp-validation-for="Referer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label"></label>
                @*<select name="DeptId" id="deptId" asp-for="Department" class="form-control">*@
                    <select asp-for="DeptId" id="DeptId" class="form-control" asp-items="@(new SelectList(@ViewBag.listofDept,"DeptId","DepartmentName"))">
                    @*<option value="">Select Department</option>*@
                </select>
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
